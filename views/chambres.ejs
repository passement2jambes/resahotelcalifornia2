<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <title><%= title || 'Hôtel Californien' %></title>
  <!-- CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui/dist/semantic.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    /* petites règles pour espacer les sections */
    main { padding: 1.5rem; max-width: 1100px; margin: 0 auto; }
    section { margin-bottom: 2rem; }
    .card { padding: 1rem; border: 1px solid #ddd; border-radius: 6px; margin-bottom: .5rem; }
    .grid { display:grid; grid-template-columns: repeat(auto-fit,minmax(240px,1fr)); gap: 12px; }
  </style>
</head>
<body>
  <!-- Navbar -->
  <div class="ui inverted menu">
    <div class="header item">Hôtel Californien</div>
    <a class="item" href="/">Accueil</a>
    <a class="item" href="/chambres">Chambres</a>
    <a class="item" href="/clients">Clients</a>
    <a class="item" href="/reservations">Réservations</a>
    <div class="right menu">
      <a class="item" href="/auth/login">Connexion</a>
    </div>
  </div>

  <main>
    <header>
      <h1><%= title || 'Tableau de bord' %></h1>
      <p>Vue d'ensemble des vues et données disponibles dans l'application.</p>
    </header>

    <!-- CHAMBRES -->
    <section id="chambres">
      <h2>Chambres</h2>
      <p><a class="ui primary button" href="/chambres/create">Ajouter une chambre</a></p>

      <% if (!chambres) { %>
        <p class="ui message">Aucune donnée de chambres fournie au template. Si tu veux afficher des chambres ici, passe la variable `chambres` depuis ton contrôleur (array d'objets).</p>
      <% } else if (chambres.length === 0) { %>
        <p>Aucune chambre trouvée.</p>
      <% } else { %>
        <div class="grid">
          <% chambres.forEach(function(ch) { %>
            <div class="card">
              <strong>Chambre n°<%= ch.numero %></strong>
              <p>Capacité : <%= ch.capacite %></p>
              <p>Disponibilité : <%= ch.disponibilite %></p>
              <p>
                <a href="/chambres/<%= ch.chambre_id || ch.id %>">Voir</a> |
                <a href="/chambres/update/<%= ch.chambre_id || ch.id %>">Modifier</a>
              </p>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>

    <!-- CLIENTS -->
    <section id="clients">
      <h2>Clients</h2>
      <p><a class="ui button" href="/clients/create">Ajouter un client</a></p>

      <% if (typeof clients === 'undefined') { %>
        <p class="ui message">Aucune donnée de clients fournie au template.</p>
      <% } else if (clients.length === 0) { %>
        <p>Aucun client.</p>
      <% } else { %>
        <ul class="ui list">
          <% clients.forEach(function(c) { %>
            <li class="item">
              <strong><%= c.nom || (c.firstname + ' ' + c.lastname) || 'Client' %></strong>
              — <a href="/clients/<%= c.id || c.client_id %>">Détails</a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </section>

    <!-- RESERVATIONS -->
    <section id="reservations">
      <h2>Réservations</h2>
      <% if (typeof reservations === 'undefined') { %>
        <p class="ui message">Aucune donnée de réservations fournie au template.</p>
      <% } else if (reservations.length === 0) { %>
        <p>Aucune réservation.</p>
      <% } else { %>
        <div>
          <% reservations.forEach(function(r) { %>
            <div class="card">
              <p><strong>Réservation #<%= r.id || r.reservation_id %></strong></p>
              <p>Client : <%= r.client_name || r.client_id %></p>
              <p>Chambre : <%= r.chambre || r.room_id %></p>
              <p>Du <%= r.date_debut || r.start_date %> au <%= r.date_fin || r.end_date %></p>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>


    <!-- UTILITAIRES / DEBUG -->
    <section id="debug">
      <h2>Debug / Liens utiles</h2>
      <ul>
        <li><a href="/">Accueil</a></li>
        <li><a href="/chambres">Liste chambres</a></li>
        <li><a href="/chambres/create">Créer chambre</a></li>
        <li><a href="/clients">Liste clients</a></li>
        <li><a href="/clients/create">Créer client</a></li>
        <li><a href="/reservations">Liste réservations</a> (si route existante)</li>
        <li><a href="/auth/login">Page de connexion</a></li>
      </ul>
    </section>
  </main>

  <!-- JS -->
  <script src="/js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/semantic-ui/dist/semantic.min.js"></script>
</body>
</html>